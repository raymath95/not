    <script>
        // --- CONFIGURATION & STATE ---
        const WEB_APP_URL = 'https://script.google.com/macros/s/AKfycbxDdIzdjYg5g-WAuLx_t5OytacRXEo-xM4aNu8gy0pjrkyowjPYzkjaPbN0fN6SiaD3mg/exec';
        let currentPage = 'list';
        let currentFilter = 'unpaid';
        
        // --- DOM ELEMENTS ---
        const mainContent = document.getElementById('main-content');
        const messageBox = document.getElementById('message-box');
        const loaderOverlay = document.getElementById('loader-overlay');

        // --- CONSTANTS ---
        const productTypes = ['‡∏õ‡∏∏‡πã‡∏¢', '‡∏¢‡∏≤', '‡∏õ‡∏∏‡πã‡∏¢‡πÄ‡∏Å‡∏•‡πá‡∏î', '‡∏Ñ‡πà‡∏≤‡∏á‡∏ß‡∏î‡∏î‡∏≠‡∏Å‡πÄ‡∏ö‡∏µ‡πâ‡∏¢', '‡∏Ñ‡πà‡∏≤‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏≠‡∏∑‡πà‡∏ô‡πÜ', '‡∏Ñ‡πà‡∏≤‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£', '‡∏≠‡∏∑‡πà‡∏ô‡πÜ'];
        const brands = ['YVP', '‡∏ã‡∏µ‡∏û‡∏µ-‡∏´‡∏°‡∏≠‡∏î‡∏¥‡∏ô', '‡∏ã‡∏≠‡∏¢‡∏•‡πå‡πÄ‡∏°‡∏ï', '‡∏û‡∏≤‡∏£‡∏¥‡∏ä', '‡∏Ñ‡∏¥‡∏á‡∏™‡πå‡πÇ‡∏û‡∏î‡∏≥', '‡∏¢‡∏≤‡∏£‡∏≤', '‡∏°‡∏á‡∏Å‡∏∏‡∏é', '‡∏´‡∏±‡∏ß‡∏ß‡∏±‡∏ß', '‡πÄ‡∏£‡∏∑‡∏≠‡πÉ‡∏ö', '‡∏≠‡∏∑‡πà‡∏ô‡πÜ'];

        // --- UTILITY FUNCTIONS ---
        const formatDate = date => new Date(date).toISOString().split('T')[0];
        const formatCurrency = amount => (parseFloat(amount) || 0).toLocaleString('th-TH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
        const setLoading = (isLoading) => {
            loaderOverlay.classList.toggle('is-loading', isLoading);
        };
        const showCustomMessage = (msg, type) => {
            messageBox.textContent = msg;
            messageBox.className = `fixed top-5 left-1/2 -translate-x-1/2 px-6 py-3 rounded-xl shadow-lg z-50 transition-all duration-300 text-white font-semibold text-base ${type === 'success' ? 'bg-violet-500' : 'bg-red-600'}`;
            messageBox.classList.remove('opacity-0', '-translate-y-20');
            setTimeout(() => {
                messageBox.classList.add('opacity-0', '-translate-y-20');
            }, 2500);
        };
        const calculateDaysRemaining = dueDateStr => {
            if (!dueDateStr) return { text: '‡πÑ‡∏°‡πà‡∏£‡∏∞‡∏ö‡∏∏', class: 'bg-gray-200 text-gray-600' };
            const today = new Date();
            const due = new Date(dueDateStr);
            today.setHours(0, 0, 0, 0);
            due.setHours(0, 0, 0, 0);
            const days = Math.ceil((due - today) / (1000 * 60 * 60 * 24));
            
            if (days < 0) return { text: `‡πÄ‡∏Å‡∏¥‡∏ô ${Math.abs(days)} ‡∏ß‡∏±‡∏ô`, class: 'bg-red-100 text-red-700' };
            if (days === 0) return { text: '‡∏à‡πà‡∏≤‡∏¢‡∏î‡πà‡∏ß‡∏ô‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ', class: 'bg-red-600 text-white font-bold' };
            if (days <= 3) return { text: `‡πÄ‡∏´‡∏•‡∏∑‡∏≠ ${days} ‡∏ß‡∏±‡∏ô`, class: 'bg-amber-300 text-amber-800' };
            return { text: `‡πÄ‡∏´‡∏•‡∏∑‡∏≠ ${days} ‡∏ß‡∏±‡∏ô`, class: 'bg-green-200 text-green-700' };
        };

        // --- API & DATA HANDLING ---
        async function apiCall(method, action, paramsOrPayload) {
            setLoading(true);
            try {
                if (!WEB_APP_URL || WEB_APP_URL.includes('PASTE_YOUR')) throw new Error('WEB_APP_URL is not configured.');
                
                let url = `${WEB_APP_URL}?action=${action}`;
                const options = { method: method, redirect: 'follow' };

                if (method === 'GET' && paramsOrPayload) {
                    url += `&${new URLSearchParams(paramsOrPayload).toString()}`;
                } else if (method === 'POST') {
                    options.body = JSON.stringify({ action: action, payload: paramsOrPayload });
                    options.headers = { 'Content-Type': 'text/plain;charset=utf-8' };
                }
                const response = await fetch(url, options);
                if (!response.ok) throw new Error(`Network response was not ok (${response.status})`);
                const result = await response.json();
                if (result.status === 'error') throw new Error(result.message);
                return result; 
            } finally {
                setLoading(false);
            }
        }
        
        function processPostResponse(result) {
            updateSummaryUI(result.data.summary);
            renderList(result.data.items);
            showCustomMessage(result.data.message || '‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!', 'success');
        }

        // --- UI RENDERING ---
        function updateSummaryUI(summary) {
            document.getElementById('total-paid-amount').textContent = formatCurrency(summary.totalPaid);
            document.getElementById('total-unpaid-amount').textContent = formatCurrency(summary.totalUnpaid);
            document.getElementById('paid-count').textContent = summary.paidCount;
            document.getElementById('unpaid-count').textContent = summary.unpaidCount;
        }

        function renderList(items) {
             if (!items || items.length === 0) {
                mainContent.innerHTML = `<div class="p-8 text-center text-gray-500 text-lg">${currentFilter === 'unpaid' ? 'üéâ ‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏à‡πà‡∏≤‡∏¢' : '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß'}</div>`;
                return;
            }

            if (currentFilter === 'unpaid') {
                items.sort((a, b) => new Date(a.dueDate) - new Date(b.dueDate)); 
            } else {
                items.sort((a, b) => b.rowNumber - a.rowNumber); 
            }

            const title = currentFilter === 'unpaid' ? '‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏à‡πà‡∏≤‡∏¢' : '‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß';
            const titleColor = currentFilter === 'unpaid' ? 'text-red-600' : 'text-violet-600';

            const listHtml = items.map(item => {
                const daysRemaining = calculateDaysRemaining(item.dueDate);
                const formattedDate = item.dueDate ? new Date(item.dueDate).toLocaleDateString('th-TH', { day: '2-digit', month: 'short', year: 'numeric' }) : '‡πÑ‡∏°‡πà‡∏£‡∏∞‡∏ö‡∏∏';
                const escapedForAttr = (item.productDisplay || '').replace(/"/g, '"');

                const paidToggleHtml = `<label for="pay-toggle-${item.rowNumber}" class="toggle-switch cursor-pointer"><input type="checkbox" id="pay-toggle-${item.rowNumber}" data-row-number="${item.rowNumber}" class="status-toggle sr-only" ${currentFilter === 'paid' ? 'checked' : ''}><div class="toggle-bg bg-gray-200 border-2 border-transparent w-12 h-7 rounded-full transition-colors ease-in-out duration-200"><div class="dot bg-white w-5 h-5 rounded-full shadow-md transform transition-transform ease-in-out duration-200 m-0.5"></div></div></label>`;
                const deleteButtonHtml = currentFilter === 'paid' ? `<button class="delete-button p-2 text-red-400 hover:text-white hover:bg-red-500 rounded-full transition-colors duration-200 transform hover:scale-110" data-row-number="${item.rowNumber}" data-item-name="${escapedForAttr}" title="‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ô‡∏µ‡πâ‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ñ‡∏≤‡∏ß‡∏£"><svg class="pointer-events-none" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg></button>` : '';
                const actionHtml = `<div class="ml-4 flex items-center justify-center flex-shrink-0 gap-3">${paidToggleHtml}${deleteButtonHtml}</div>`;
                const brandHtml = item.brand ? `<p class="text-sm text-gray-500 mt-1">‡∏¢‡∏µ‡πà‡∏´‡πâ‡∏≠: ${item.brand}</p>` : '';
                const noteHtml = item.note ? `<p class="text-xs text-amber-800 bg-amber-100 rounded-md p-2 mt-2 break-all">${item.note}</p>` : '';

                return `<div id="item-row-${item.rowNumber}" class="list-item flex items-start p-4 border-b border-gray-200"><div class="flex-grow"><div class="grid grid-cols-2 gap-x-3 items-start"><div class="col-span-1"><p class="font-semibold text-base truncate">${item.productDisplay}</p><p class="font-bold text-lg text-slate-800 mt-0.5">${formatCurrency(item.amount)}</p>${brandHtml}</div><div class="col-span-1 flex flex-col items-end text-right"><span class="text-xs font-semibold px-2 py-1 rounded-full ${daysRemaining.class}">${daysRemaining.text}</span><p class="text-sm text-gray-500 mt-1">${formattedDate}</p></div></div>${noteHtml}</div><div class="flex-shrink-0 self-center">${actionHtml}</div></div>`;
            }).join('');
            
            mainContent.innerHTML = `<div class="px-4 pt-4"><h2 class="text-xl font-bold mb-2 ${titleColor}">${title} (${items.length})</h2></div><div>${listHtml}</div>`;
        }

        function renderAddForm() {
            const today = new Date();
            const dueDate = new Date();
            dueDate.setDate(today.getDate() + 7);
            mainContent.innerHTML = `<div class="p-4"><div class="bg-white rounded-2xl w-full max-w-lg mx-auto my-4 p-5 sm:p-6"><h2 class="text-2xl font-bold mb-6 text-center text-gray-800">‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡πÉ‡∏´‡∏°‡πà</h2><form id="add-item-form" class="space-y-5"><div class="grid grid-cols-1 sm:grid-cols-2 gap-4"><div><label class="block text-sm font-medium text-gray-600 mb-1">‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏™‡∏±‡πà‡∏á‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤</label><input type="date" id="orderDate" value="${formatDate(today)}" class="form-input" required></div><div><label class="block text-sm font-medium text-gray-600 mb-1">‡∏Ñ‡∏£‡∏ö‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏ä‡∏≥‡∏£‡∏∞</label><input type="date" id="dueDate" value="${formatDate(dueDate)}" class="form-input" required></div></div><div><label class="block text-sm font-medium text-gray-600 mb-1">‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤</label><select id="productType" class="form-select" required><option value="" disabled selected>-- ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó --</option>${productTypes.map(t => `<option value="${t}">${t}</option>`).join('')}</select></div><div><label class="block text-sm font-medium text-gray-600 mb-1">‡∏¢‡∏µ‡πà‡∏´‡πâ‡∏≠‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤</label><select id="brand" class="form-select"><option value="">-- ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏¢‡∏µ‡πà‡∏´‡πâ‡∏≠ (‡∏ñ‡πâ‡∏≤‡∏°‡∏µ) --</option>${brands.map(b => `<option value="${b}">${b}</option>`).join('')}</select></div><div class="p-5 bg-violet-50 rounded-xl space-y-5 border border-violet-100"><div><label class="block text-base font-medium text-gray-600">‡∏¢‡∏≠‡∏î‡∏ä‡∏≥‡∏£‡∏∞‡πÅ‡∏•‡πâ‡∏ß</label><input type="text" inputmode="decimal" id="paidAmount" placeholder="0.00" class="mt-1 form-input money-input text-right text-2xl font-semibold"></div><div><label class="block text-base font-medium text-gray-600">‡∏¢‡∏≠‡∏î‡∏Ñ‡∏á‡πÄ‡∏´‡∏•‡∏∑‡∏≠</label><input type="text" inputmode="decimal" id="remainingAmount" placeholder="0.00" class="mt-1 form-input money-input text-right text-2xl font-semibold"></div></div><div><label class="block text-sm font-medium text-gray-600">‡∏ó‡∏∞‡πÄ‡∏ö‡∏µ‡∏¢‡∏ô‡∏£‡∏ñ</label><div id="vehicleRegContainer" class="space-y-3 mt-1"><div class="flex items-center gap-2 vehicle-reg-entry"><input type="text" name="vehicleReg" placeholder="‡∏Å‡∏Ç 1234" class="form-input"></div></div> <button type="button" id="add-vehicle-button" class="mt-2 flex items-center gap-2 text-sm text-violet-600 font-semibold hover:text-violet-800 transition-colors"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14"/><path d="M5 12h14"/></svg><span>‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ó‡∏∞‡πÄ‡∏ö‡∏µ‡∏¢‡∏ô‡∏£‡∏ñ</span></button></div><div><label for="notes" class="block text-sm font-medium text-gray-600 mb-1">‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏</label><textarea id="notes" name="notes" class="form-select" rows="3" placeholder="‡∏Å‡∏£‡∏≠‡∏Å‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏ (‡∏ñ‡πâ‡∏≤‡∏°‡∏µ)"></textarea></div><div class="flex flex-col gap-3 pt-6"><button type="submit" class="w-full px-6 py-4 text-lg bg-violet-600 text-white font-bold rounded-xl hover:bg-violet-700 active:scale-95 transition-transform shadow-lg shadow-violet-200">‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£</button><button type="button" id="cancel-add-item" class="w-full px-6 py-3 text-base bg-gray-200 text-gray-700 font-semibold rounded-xl hover:bg-gray-300">‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å</button></div></form></div></div>`;
            
            mainContent.querySelector('#add-item-form').addEventListener('submit', handleFormSubmit);
            mainContent.querySelector('#cancel-add-item').addEventListener('click', () => switchPage('list', currentFilter));
            const vehicleContainer = mainContent.querySelector('#vehicleRegContainer');
            mainContent.querySelector('#add-vehicle-button').addEventListener('click', () => { const newEntry = document.createElement('div'); newEntry.className = 'flex items-center gap-2 vehicle-reg-entry'; newEntry.innerHTML = `<input type="text" name="vehicleReg" placeholder="‡∏ó‡∏∞‡πÄ‡∏ö‡∏µ‡∏¢‡∏ô‡∏£‡∏ñ‡πÉ‡∏´‡∏°‡πà" class="form-input flex-grow"><button type="button" class="remove-vehicle-button p-2 text-red-500 hover:bg-red-100 rounded-full transition-colors flex-shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg></button>`; vehicleContainer.appendChild(newEntry); });
            vehicleContainer.addEventListener('click', function(event) { const removeButton = event.target.closest('.remove-vehicle-button'); if (removeButton) removeButton.closest('.vehicle-reg-entry').remove(); });
        }
        
        async function handleFormSubmit(event) {
            event.preventDefault();
            const form = event.target; 
            if (!form.querySelector('#productType').value) { showCustomMessage('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤', 'error'); return; }
            const paidAmount = parseFloat(form.querySelector('#paidAmount').value) || 0;
            const remainingAmount = parseFloat(form.querySelector('#remainingAmount').value) || 0;
            const totalAmount = paidAmount + remainingAmount;
            if (totalAmount <= 0) { showCustomMessage('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏¢‡∏≠‡∏î‡πÄ‡∏á‡∏¥‡∏ô', 'error'); return; }
            const vehicleRegValues = Array.from(form.querySelectorAll('input[name="vehicleReg"]')).map(input => input.value.trim()).filter(value => value);
            const vehicleRegString = vehicleRegValues.join(', ');
            const formData = {
                '‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏™‡∏±‡πà‡∏á‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤': form.querySelector('#orderDate').value, '‡∏Ñ‡∏£‡∏ö‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏ä‡∏≥‡∏£‡∏∞': form.querySelector('#dueDate').value,
                '‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤': form.querySelector('#productType').value, '‡∏¢‡∏µ‡πà‡∏´‡πâ‡∏≠‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤': form.querySelector('#brand').value || '',
                '‡∏¢‡∏≠‡∏î‡∏ä‡∏≥‡∏£‡∏∞': totalAmount, '‡∏ó‡∏∞‡πÄ‡∏ö‡∏µ‡∏¢‡∏ô‡∏£‡∏ñ': vehicleRegString, '‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏': form.querySelector('#notes').value,
                '‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏ä‡∏≥‡∏£‡∏∞‡πÅ‡∏•‡πâ‡∏ß': paidAmount, '‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏ä‡∏≥‡∏£‡∏∞': remainingAmount,
                '‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏Å‡∏≤‡∏£‡∏ä‡∏≥‡∏£‡∏∞': remainingAmount <= 0 && paidAmount > 0,
            };

            try {
                const payload = { formData: formData, isPaidView: currentFilter === 'paid' };
                const result = await apiCall('POST', 'addItem', payload);
                processPostResponse(result);
                switchPage('list', 'unpaid');
            } catch (err) {
                showCustomMessage('‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + err.message, 'error');
                switchPage('add');
            }
        }
        
        // --- PAGE NAVIGATION & INITIALIZATION ---
        async function switchPage(page, filter) {
            currentPage = page;
            currentFilter = filter || currentFilter;
            
            document.querySelectorAll('.nav-button').forEach(btn => btn.classList.remove('bg-violet-100', 'text-violet-700'));
            const activeBtnId = currentPage === 'add' ? 'nav-add-item' : (currentFilter === 'paid' ? 'nav-paid-items' : 'nav-unpaid-items');
            document.getElementById(activeBtnId).classList.add('bg-violet-100', 'text-violet-700');

            if (currentPage === 'list') {
                try {
                    const result = await apiCall('GET', 'getFilteredData', { isPaid: currentFilter === 'paid' });
                    renderList(result.data.items);
                } catch (err) {
                    mainContent.innerHTML = `<div class="p-8 text-center text-red-500 font-bold">Error: ${err.message}</div>`;
                }
            } else {
                renderAddForm();
            }
        }

        async function initializeApp() {
            if (!WEB_APP_URL || WEB_APP_URL.includes('PASTE_YOUR')) {
                mainContent.innerHTML = `<div class="p-8 text-center text-red-500 font-bold">‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏Ñ‡πà‡∏≤ WEB_APP_URL</div>`;
                setLoading(false);
                return;
            }
            try {
                const result = await apiCall('GET', 'getInitialData', { isPaid: currentFilter === 'paid' });
                updateSummaryUI(result.data.summary);
                renderList(result.data.items);
                document.getElementById('nav-unpaid-items').classList.add('bg-violet-100', 'text-violet-700');
            } catch(err) {
                 mainContent.innerHTML = `<div class="p-8 text-center text-red-500 font-bold">‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ:<br>${err.message}</div>`;
            }
        }
        
        // --- EVENT LISTENERS ---
        document.addEventListener('DOMContentLoaded', () => {
            // Static element listeners
            document.getElementById('nav-add-item').addEventListener('click', () => switchPage('add'));
            document.getElementById('nav-paid-items').addEventListener('click', () => switchPage('list', 'paid'));
            document.getElementById('nav-unpaid-items').addEventListener('click', () => switchPage('list', 'unpaid'));
            document.getElementById('refresh-button').addEventListener('click', initializeApp);

            // Dynamic content listeners (event delegation)
            mainContent.addEventListener('click', async (event) => {
                const deleteBtn = event.target.closest('.delete-button');
                if (deleteBtn) {
                    event.preventDefault();
                    const rowNumber = parseInt(deleteBtn.dataset.rowNumber, 10);
                    const itemName = deleteBtn.dataset.itemName;
                    if (confirm(`‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£ "${itemName}" ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?\n‡∏Å‡∏≤‡∏£‡∏Å‡∏£‡∏∞‡∏ó‡∏≥‡∏ô‡∏µ‡πâ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏¢‡πâ‡∏≠‡∏ô‡∏Å‡∏•‡∏±‡∏ö‡πÑ‡∏î‡πâ`)) {
                        try {
                            const payload = { rowNumber, isPaidView: currentFilter === 'paid' };
                            const result = await apiCall('POST', 'deleteItem', payload);
                            processPostResponse(result);
                        } catch (err) {
                            showCustomMessage('‡∏•‡∏ö‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + err.message, 'error');
                            switchPage('list', currentFilter);
                        }
                    }
                }
            });
            
            mainContent.addEventListener('change', async (event) => {
                const statusToggle = event.target.closest('.status-toggle');
                if (statusToggle) {
                    const rowNumber = parseInt(statusToggle.dataset.rowNumber, 10);
                    const isPaid = statusToggle.checked;
                    try {
                        const payload = { rowNumber, isPaid, isPaidView: currentFilter === 'paid' };
                        const result = await apiCall('POST', 'updateItemStatus', payload);
                        processPostResponse(result);
                    } catch (err) {
                        showCustomMessage('‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + err.message, 'error');
                        switchPage('list', currentFilter);
                    }
                }
            });

            // Initial load
            initializeApp();
        });
    </script>
</body>
</html>
